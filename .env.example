# Telegram Bot
BOT_TOKEN=your_bot_token_here

# OpenAI API Key (Base64 encoded)
OPENAI_API_KEY_BASE64=your_base64_encoded_openai_key

# Symfony API
SYMFONY_API_URL=http://127.0.0.1:8000/api/telegram

# Telegram Channel (optional)
TELEGRAM_CHANNEL_ID=

# Target Chat ID for message monitoring
TARGET_CHAT_ID=-1001066197625

# Arena Relay Bot configuration
ARENA_URL=http://arena-relay-bot:8000
ARENA_ENABLED=true
ARENA_WEBHOOK_PORT=8001

# Scheduler
REPORT_TIME=09:00
TIMEZONE=UTC

# Logging
LOG_LEVEL=INFO
